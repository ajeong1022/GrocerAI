<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ic_launcher_background"
    android:gravity="center_horizontal"
    android:paddingTop="30dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/bungee"
        android:includeFontPadding="false"
        android:text="@string/greeting_app_title"
        android:textSize="36sp" />


    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/grocerai_greeting_icon_description"
        android:adjustViewBounds="true"
        android:src="@drawable/groceries" />

    <Button
        android:id="@+id/bt_begin_shopping"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/bungee"
        android:includeFontPadding="false"
        android:padding="10dp"
        android:text="@string/button_begn_shopping"
        android:textColor="#8A070707"
        android:textSize="22sp" />

    <Button
        android:id="@+id/bt_browse_recipes"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/bungee"
        android:includeFontPadding="false"
        android:padding="10dp"
        android:text="@string/button_browse_recipes"
        android:textColor="#8A070707"
        android:textSize="22sp" />


</LinearLayout>

