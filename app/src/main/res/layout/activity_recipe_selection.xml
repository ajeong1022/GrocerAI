<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RecipeSelectionActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/recipe_selection_instruction"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lv_recipe_search_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.mancj.materialsearchbar.MaterialSearchBar
            android:id="@+id/recipe_searchBar"
            style="@style/MaterialSearchBarLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mt_maxSuggestionsCount="10"
            app:mt_placeholder="Search for a recipe..."
            app:mt_placeholderColor="@android:color/tab_indicator_text" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/tv_selected_recipes"
        android:textSize="24sp"
        android:textAlignment="center"
        android:gravity="center"
        tools:text="Spaghetti, Pizza"/>

</LinearLayout>